# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='eza'
alias ll='eza -la'
alias cat='batcat'
alias grep='grep --color=auto'
eval "$(zoxide init --cmd cd bash)"

# Format bash prompt to
#   â•­ [user@hostname] [directory]
#   â•°â”€ ğº
#
PS1="\[\e[1;36m\]â•­ [\u@\h:\w]\n\[\e[1;36m\]â•°â”€ \[\e[0;36m\]ğº \[\e[0;37m\]"
